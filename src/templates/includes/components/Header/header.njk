{% import "includes/components/Button/button.njk" as Button %}

{% set navItems = [
  {
    title: 'Home',
    url: '/Home/home.html'
  }, {
    title: 'About',
    url: '/About/about.html'
  }, {
    title: 'Classes',
    url: '/Classes/classes.html'
  }, {
    title: 'Teachers',
    url: '/Teachers/teachers.html'
  }, {
    title: 'Gallery',
    url: '/Gallery/gallery.html'
  }, {
    title: 'Contact',
    url: '/Contact/contact.html'
  }
] %}

<div class='container'>
  <a class='header__logo' href="/">KidsRiddle</a>

  <figure class='header__menu-toggle'>
    <img src="../assets/images/toggle-menu.svg" alt="Menu Toggle">
  </figure>

  <nav class='header__menu'>
    <div class="header__links">
      {% for item in navItems %}
        <a class='{% if title == item.title -%} current {%- endif %}' href="{{item.url}}">{{item.title}}</a>
      {% endfor %}
    </div>

    {{Button.item(
        href='/',
        text='Join Class',
        class='sm'
      )}}
  </nav>
</div>