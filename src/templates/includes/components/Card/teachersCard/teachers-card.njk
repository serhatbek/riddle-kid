{% macro item(img, name, job) %}
  <div class="teachers-card">
    <div class="teachers-card__social">
      <figure>
        <img src="{{ img }}" alt="{{ name }}">
      </figure>
      <div>
        {{ caller() }}
      </div>
    </div>
    <div class="teachers-card__content">
      <h4>{{ name }}</h4>
      <i>{{ job }}</i>
    </div>
  </div>
{% endmacro %}